body 
  font-family: 'Droid Sans', Helvetica, Arial, sans-serif;
  
  &.night
    background: #171F26 url('/img/noise.png') repeat;
  
  &.day
    background: #D5DEE5 url('/img/noise.png') repeat;

.night
  
  .content_type-table
    background-color: rgba(0,0,0,.02);
    box-shadow: 0 0 0 1px rgba(0,0,0,.5), inset 1px 1px 0 0 rgba(255,255,255,.1), 0 0 3px rgba(0,0,0,.5);
    border-radius: 3px;
    
    .header 
      background-color: rgba(255,255,255,.05);
      box-shadow: inset 0 -1px 0 0 rgba(255,255,255,.1), inset 0 -2px 0 0 rgba(0,0,0,.5);
      
      .title
        box-shadow: 1px -1px 0 0 rgba(255, 255, 255, 0.35), -1px 1px 0 0 rgba(255, 255, 255, 0.45), 0 5px 5px rgba(0, 0, 0, 0.06) inset;
    
    .body.field-name
      box-shadow: none;

  .grid-container 
    input
    .info
    .col-header
      li
        box-shadow: inset 0 1px 0 0 rgba(0,0,0,.8),1px 1px 0 0 rgba(255,255,255,.1), inset 0 0 4px rgba(0,0,0,.8);
        border-radius: 3px;

    .row-header
      @extend .night .grid-container .col-header;

    .add-new
      box-shadow: 0 -1px 0 0 rgba(0,0,0,.8),1px 1px 0 0 rgba(255,255,255,.1), inset 0 0 4px rgba(0,0,0,.8);
      border-radius: 3px;
    
    .grid
      box-shadow: 0 -1px 0 0 rgba(0,0,0,.8),1px 1px 0 0 rgba(255,255,255,.1), inset 0 0 4px rgba(0,0,0,.8);
      border-radius: 3px;
      
      .row 
        box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.2), 0 1px 0 0 rgba(255, 255, 255, 0.05);

.day
  background-image: none;
  
  .actions-column
    box-shadow: none;
    
    .well
      background: none; border: 0;
      
      .btn
        background: none; border-radius: 1px; box-shadow: none; text-shadow: 1px 1px 0 rgba(255,255,255, 0.64);
      
      .add-content
        color: #666677; border:0; border-top: solid 1px rgba(0,0,0,0.1); background: none;
      
        &:hover
          background: none repeat scroll 0 0 rgba(174, 174, 184, 0.27);
      
      .icon-plus
        background-position: 0 -96px;

  .content_type-wall 
    border-radius: 0 5px 5px 0;
    box-shadow: 5px 6px 5px rgba(0, 0, 0, 0.21) inset;

    .content_type-table 
      background-color: rgba(255, 255, 255, 0.56);
      box-shadow: 0 0 1px rgba(0, 0, 0, 0.37);

      .header 
        background-color: rgba(255,255,255,.05);
        border-bottom: 1px dotted rgba(0, 0, 0, 0.14);

      .body
        .col-header
          .field-name
            box-shadow: none;

        .row-header
          .action-column-button
            box-shadow: none;
            
    .grid-container 
      input
      .info
      .col-header 
        li 
          box-shadow: 1px -1px 0 0 rgba(255, 255, 255, 0.35), -1px 1px 0 0 rgba(255, 255, 255, 0.45), 0 0 1px rgba(0, 0, 0, 0.49) inset;
          border-radius: 3px;

      .row-header
        @extend  .day .content_type-wall .grid-container .col-header;
        li
          box-shadow: 1px -1px 0 0 rgba(255, 255, 255, 0.35), -1px 1px 0 0 rgba(255, 255, 255, 0.45), 0 0 1px rgba(0, 0, 0, 0.49) inset;    

      .add-new
        background: none repeat scroll 0 0 rgba(255, 255, 255, 0.5);
        box-shadow: 0 -1px 0 0 rgba(0,0,0,.8), 1px 1px 0 0 rgba(255,255,255,.1), inset 0 0 4px rgba(0,0,0,.8);
        border-radius: 3px;

      .grid
        box-shadow: 1px -1px 0 0 rgba(255, 255, 255, 0.35), -1px 1px 0 0 rgba(255, 255, 255, 0.45), 0 0 1px rgba(0, 0, 0, 0.49) inset;
        border-radius: 3px;

        .row
          box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.2), 0 1px 0 0 rgba(255, 255, 255, 0.05);

.grid-container .info {background: transparent url('/img/add-entry.png') no-repeat 0 0;}